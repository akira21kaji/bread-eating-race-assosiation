---
const { subtitle, title } = Astro.props;
---
<div class="title-container">
  <p class="subtitle">{subtitle}</p>
  <h1 class="title">{title}</h1>
</div>

<style>
  .title-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    width: 600px;
    height: 100px;
    gap:22px;
    margin-top: 160px;
    margin-bottom: 80px;
  }

  @media (max-width: 640px) {
    .title-container {
      width: 280px;
      margin-top: 120px;
      margin-bottom: 64px;
    }
  }

  .subtitle {
    color: #e07e21;
    font-weight: 700;
    font-size: 16px;
  }

  .title {
    font-weight: bold;
    font-size: 44px;
  }

  @media (max-width: 640px) {
    .title {
      font-size: 28px;
    }
  }

  @media (max-width: 640px) {
    .subtitle {
      font-size: 16px;
    }
  }
</style>

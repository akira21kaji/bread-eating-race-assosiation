---
import Title from "../component/Title.astro";
import { Image } from "astro:assets";
import Nippn from "../../assets/sponsored/nippn_logo.webp";
import Hashimoto from "../../assets/sponsored/hashimoto_logo.webp";
import Hashimoto2 from "../../assets/sponsored/hashimoto_logo2.webp";
import Hashimoto3 from "../../assets/sponsored/hashimoto_logo3.webp";
import Hashimoto4 from "../../assets/sponsored/hashimoto_logo4.webp";
---
<div>
  <section class="flex flex-col items-center justify-center sm:px-0 px-5">
    <Title subtitle="PARTNERSHIP" title="パートナーシップ" />
    <article class="flex flex-col items-center justify-center gap-12">

      <div class="flex flex-col items-center justify-center w-full gap-10">       
        <h1 class="text-2xl font-semibold ">ゴールドパートナー</h1>
        <div class="flex items-center justify-center">
            <div class="flex flex-col items-center justify-end w-[328px] h-[124px] gap-4">
              <div class="w-[328px] h-[100px] flex items-center justify-center">
                <Image src={Nippn} alt="寄付の取り組み" width="328" height="100" fit="contain"/>
              </div>
              <p>株式会社ニップン様</p>
            </div>
        </div>
      </div>

---
import { Image } from "astro:assets";
import { getDonationPhoto } from "../../lib/microcms";
const res = await getDonationPhoto();
---

<div class="donation-container">
  <article class="flex flex-col items-center justify-center sm:py-32 sm:px-12 px-5">
    <div class="title-container">
      <p class="subtitle">DONATION</p>
      <h1 class="title">寄付の取り組み</h1>
    </div>
    <div class="flex flex-col items-center justify-center gap-8">
      <p class="text-xl font-thin text-white">走った分だけ開催地域の子ども食堂にパンを寄付します。</p>
      <div class="max-w-[1040px] sm:h-[680px] h-[320px] overflow-y-scroll">
        <div class="grid sm:grid-cols-3 grid-cols-1 gap-3 p-4">
          {res.images.map((image: any) => (
            <Image src={image.url + "?w=350&h=350&fit=crop"} alt="寄付の取り組み" width="350" height="350" />
          ))}
        </div>
      </div>
    </div>
  </article>
</div>

<style>
  .donation-container {
    background-color: #B78A60;
    text-align: center;
    padding: 36px 0;
  }

  .images {
    object-fit: cover;
  }

  .title-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 80%;
    margin-bottom: 24px;
  }

  .subtitle {
    color: white;
    font-weight: 900;
    font-size: 16px;
  }

  .title {
    color: white;
    font-weight: 700;
    font-size: 40px;
  }
</style>